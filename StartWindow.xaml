<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NetEnvSwitcher"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="NetEnvSwitcher.StartWindow"
        Title="NetEnvSwitcher" Height="420" mc:Ignorable="d" Width="800"
        TextOptions.TextFormattingMode="Display"
        Icon="system-software-update.ico"
        >
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Expander x:Name="LogExpander"
                ExpandDirection="Right"
                IsExpanded="True"
                Expanded="Expander_Expanded"
                Collapsed="Expander_Collapsed" Grid.Column="1">
                  <!--Margin="-25,0,0,0">-->

                <Expander.Header>
                    <TextBlock Text="Log" RenderTransformOrigin="0.5,0.5" >
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="-90"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Expander.Header>

                <Grid>
                    <FlowDocumentScrollViewer x:Name="LogDocViewer" TextOptions.TextFormattingMode="Ideal" IsManipulationEnabled="True" MaxZoom="500">
                        <FlowDocument PageWidth="2000" FontFamily="Consolas" FontSize="12" Background="White" TextAlignment="Left">
                            <Paragraph x:Name="VersionParagraph" FontSize="20">NetAppSwitcher version 1.0.0.0</Paragraph>
							
							<Paragraph/>
                            
                            <Paragraph x:Name="LogParagraph" ><InlineUIContainer>
									<Grid
                            
                            RenderTransformOrigin="0.5,0.5">
                            
										
                            
										<Path
                            
                            Width="15" Height="15" Stroke="#FF046A18" StrokeThickness="3.5" Stretch="Uniform" UseLayoutRounding="False" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" Data="F1 M 328.101,80.0001L 80,328.101L 328.101,576.203" HorizontalAlignment="Left"/>
                            
										<TextBlock
                            
                            Text="Use buttons to switch environments" Margin="19,0,-19,0" d:LayoutOverrides="VerticalAlignment" Foreground="#FF046A18"/>
                            
									</Grid>
                            
								</InlineUIContainer></Paragraph>
                        </FlowDocument>
                    </FlowDocumentScrollViewer>
                </Grid>
            </Expander>
        </Grid>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"><Run Text="Guard server:"/></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding GuardServerStatus}" />

            <TextBlock Grid.Row="1" Grid.Column="0"><Run Text="Guardian:"/></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GuardianStatus}" />

            <TextBlock Grid.Row="2" Grid.Column="0"><Run Text="TTM:"/></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TtmStatus}" />


            <TextBlock Grid.Row="3" Grid.Column="0"><Run Text="Environment:"/></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentEnvironment}"/>

            <TextBlock Grid.Row="4" Margin="0,10,0,0"><Run Text="Switch to:"/></TextBlock>




            <ScrollViewer Grid.Row="5" Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ConfigurationsPanel">
                    <StackPanel.Resources>
                    	
						<local:TextLengthToVisibilityConverter x:Key="TextLengthToVisibilityConverter" />

                        <DataTemplate DataType="{x:Type local:EnvironmentConfig}">
                            <Button Margin="5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontSize="14" Text="{Binding Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Multicast}" TextAlignment="Center" Visibility="{Binding Multicast, Converter={StaticResource TextLengthToVisibilityConverter}}" />
                                    <TextBlock TextAlignment="Center" Visibility="{Binding RemoteDaemon, Converter={StaticResource TextLengthToVisibilityConverter}}"><Run Text="remote: " /><Run Text="{Binding RemoteDaemon}" /></TextBlock>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </StackPanel.Resources>

                    <Button Content="Peregrine"/>
                    <Button Content="Mantis"/>
                    <Button Content="14th floor"/>
                    <Button Content="Multibroker"/>
                    <Button Content="Peregrine"/>
                    <Button Content="Mantis"/>
                    <Button Content="14th floor"/>
                    <Button Content="Multibroker"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>


        

    </Grid>
</Window>
